<UserControl
  x:Class="ZoNo.Views.Account.UserView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid>
    <Grid.Resources>
      <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="IsTextSelectionEnabled" Value="True"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="12,0,0,0"/>
      </Style>
    </Grid.Resources>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Border Grid.Column="0" CornerRadius="8">
      <Image Width="30" Height="30" Source="{x:Bind Picture, Mode=OneWay}"/>
    </Border>
    <TextBlock Grid.Column="1" Text="{x:Bind FirstName, Mode=OneWay}"/>
    <TextBlock Grid.Column="2" Text="{x:Bind LastName, Mode=OneWay}"/>
    <TextBlock Grid.Column="3" Text="{x:Bind Email, Mode=OneWay}"/>
  </Grid>
</UserControl>
